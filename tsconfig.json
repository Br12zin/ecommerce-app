{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [ //Diretório relativo para o src
        "./src*" //Colocar o src no ./ poque o expo cria o projeto sem pasta source, por padrão vem sem src
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
